const axios = require("axios");
const apiKey = "pk_d85d60f16d394932a513e711174e80b1";

exports.handler = async function (event, context) {
  const { symbol } = event.queryStringParameters;

  if (!symbol) {
    return {
      statusCode: 400,
      body: JSON.stringify({ error: "Missing 'symbol' query parameter" }),
    };
  }

  try {
    const response = await axios.get(
      `https://cloud.iexapis.com/stable/stock/${symbol}/quote?token=${apiKey}`
    );

    const stockData = response.data;

    return {
      statusCode: 200,
      body: JSON.stringify({
        symbol: stockData.symbol,
        companyName: stockData.companyName,
        latestPrice: stockData.latestPrice,
        change: stockData.change,
        changePercent: stockData.changePercent,
      }),
    };
  } catch (error) {
    return {
      statusCode: 500,
      body: JSON.stringify({ error: "Failed to fetch stock data" }),
    };
  }
};
